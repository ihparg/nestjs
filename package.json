{
  "name": "@graphi/nestjs",
  "version": "0.1.0",
  "description": "",
  "author": "lobos841@gmail.com",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "start:web": "cd dev-web && yarn dev",
    "start:dev": "nest start --watch",
    "build:web": "cd dev-web && yarn && yarn build",
    "build": "nest build && yarn build:web && cp package.json dist/package.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prettier-watch": "onchange \"test/data/**/*.ts\" -- prettier --write --ignore-unknown {{changed}}"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "nanoid": "^3.1.25",
    "nunjucks": "^3.2.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0"
  },
  "peerDependencies": {
    "@nestjs/common": "> 8.0.0",
    "@nestjs/core": "> 8.0.0",
    "class-transformer": "> 0.4.0",
    "class-validator": "> 0.13.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.1",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/schematics": "^8.0.3",
    "@nestjs/testing": "^8.0.6",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.1.0",
    "onchange": "^7.1.0",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
